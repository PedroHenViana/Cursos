<%- include('partials/header') %>
<body>
    <%- include('partials/navbar') %>

    <div class="container">
        <!-- Lista de perguntas (caso venham do backend) -->
        <% if (typeof perguntas !== "undefined" && perguntas.length > 0) { %>
                <hr>
                <h1>Perguntas</h1>
                <a href="/perguntar" class="btn btn-primary">Perguntar</a>
                <hr>                
                <% perguntas.forEach(pergunta => { %>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <h3><%= pergunta.titulo %></h3>
                        </div>
                        <div class="card-footer">
                            <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-primary">Responder</button></a>
                        </div>
                    </div>
                <% }) %>
        <% } else { %>
            <p>Nenhuma pergunta cadastrada ainda.</p>
        <% } %>
    </div>
</body>
<%- include('partials/footer') %>